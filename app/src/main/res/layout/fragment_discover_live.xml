<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--广告栏-->
    <android.support.v4.view.ViewPager
        android:background="#ffff00"
        android:id="@+id/vp_Live"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </android.support.v4.view.ViewPager>
    <!--正在直播模块-->
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/guess_pannel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在直播"
                android:textSize="24sp"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/special_pannel_tv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/arrow_right"
                android:drawablePadding="10dp"
                android:textColor="@color/public_gray" />
            <View
                android:layout_below="@id/guess_pannel_tv"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                style="@style/horizontal_line"></View>
        </RelativeLayout>


    </LinearLayout>
    <!--列表-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_Live"
        android:layout_width="match_parent"
        android:layout_height="100dp">

    </android.support.v7.widget.RecyclerView>
    <!--单栏广告页-->
    <ImageView
        android:id="@+id/iv_single_banner"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="60dp" />
    <!--线上沙龙-->
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/guess_pannel_tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="线上沙龙"
                android:textSize="24sp"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/special_pannel_tv_more_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/arrow_right"
                android:drawablePadding="10dp"
                android:textColor="@color/public_gray" />
            <View
                android:layout_below="@id/guess_pannel_tv_1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                style="@style/horizontal_line"></View>
        </RelativeLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_live_1"
        android:layout_width="match_parent"
        android:layout_height="100dp">

    </android.support.v7.widget.RecyclerView>

    <!--线上沙龙-->
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/guess_pannel_tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直播客"
                android:textSize="24sp"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/special_pannel_tv_more_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/arrow_right"
                android:drawablePadding="10dp"
                android:textColor="@color/public_gray" />
            <View
                android:layout_below="@id/guess_pannel_tv_2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                style="@style/horizontal_line"></View>
        </RelativeLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_live_2"
        android:layout_width="match_parent"
        android:layout_height="100dp">

    </android.support.v7.widget.RecyclerView>
    <!--热门主播-->
    <include layout="@layout/widget_corner_panel">

    </include>
    <!--精彩直播预告-->
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_Live_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </android.support.v4.view.ViewPager>

</LinearLayout>