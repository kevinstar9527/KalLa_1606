<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_login_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <ImageView
        android:layout_alignParentRight="true"
        android:src="@drawable/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginTop="30dp"
        android:id="@+id/top1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/kaola_logo_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_below="@id/top1"
        android:layout_centerHorizontal="true"
        android:id="@+id/top2"
        android:src="@drawable/kaola_logo_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"/>
    <EditText
        android:layout_below="@id/top2"
        android:id="@+id/username"
        android:hint="请输入邮箱/手机号"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="50dp" />
    <EditText
        android:layout_below="@id/username"
        android:id="@+id/password"
        android:hint="输入密码"
        android:textColor="@color/public_gray"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:drawableRight="@drawable/show_normal"/>
    <Button
        android:id="@+id/btn_logon"
        android:text="登陆"
        android:layout_below="@id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/corner_shape_iv"/>
    <TextView
        android:id="@+id/register"
        android:text="快速注册"
        android:textColor="@android:color/white"
        android:layout_below="@id/btn_logon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/findPasswod"
        android:text="快速登陆"
        android:textColor="@android:color/white"
        android:layout_below="@id/btn_logon"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_marginTop="70dp"
        android:layout_below="@id/register"
        android:gravity="center"
        android:text="使用第三方账号登陆"
        android:id="@+id/middle_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" />
    <LinearLayout
        android:layout_below="@id/middle_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/weChat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/login_wechat"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="微信"/>
        <TextView
            android:id="@+id/qq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/login_qq"
            android:text="QQ"/>
        <TextView
            android:id="@+id/weibo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="微博"
            android:drawableTop="@drawable/login_weibo"/>
    </LinearLayout>


</RelativeLayout>