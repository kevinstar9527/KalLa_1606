<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/guess_pannel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="猜你喜欢"
            android:drawableRight="@drawable/ic_break_point_play"
            android:drawablePadding="5dp"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:id="@+id/guess_pannel_tv_re"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="换一批"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/refresh_more"
            android:drawablePadding="10dp"
            android:textColor="@color/public_gray"
            />
        <View
            android:layout_below="@id/guess_pannel_tv"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            style="@style/horizontal_line"
        ></View>
    </RelativeLayout>


</LinearLayout>